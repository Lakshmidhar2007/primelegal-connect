/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a user-centric security model for the Pr√≠melegal Connect application.
 *
 * Core Philosophy:
 *  - Strict User Ownership: Users have full control over their own data (e.g., profile information).
 *  - Public Lawyer Profiles: Public profiles are readable by anyone, but only writable by the profile owner.
 *  - Shared Access for Chats: Participants of the chat have access to the chat data.
 *
 * Data Structure:
 *  - /users/{userId}: Private user account data.
 *  - /lawyer_profiles/{lawyerId}: Public lawyer profiles.
 *  - /chats/{chatId}: Chat messages between participants.
 *
 * Key Security Decisions:
 *  - User listing is disallowed.
 *  - Public lawyer profiles are publicly readable.
 *  - The default security posture for ambiguous relationships is strict owner-only access.
 *
 * Denormalization for Authorization:
 *  - Chat documents include a `participants` array for easy access control.
 *
 * Structural Segregation:
 *  - Private user data is stored in `/users/{userId}`, while public lawyer profiles are stored in `/lawyer_profiles/{lawyerId}`.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants or denies access to the current signed in user.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the document.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the existing owner of the document.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Allows a user to read and write their own user account data.
     * @path /users/{userId}
     * @allow (create) User with UID 'user123' can create their own document with matching ID.
     * @allow (get, update, delete) User with UID 'user123' can read, update, and delete their own document.
     * @deny (create, update, delete) User with UID 'user456' cannot modify user 'user123' data.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing users is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id; // Enforce immutability of userId on update
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows anyone to read lawyer profiles, but only the lawyer themselves can create, update, or delete their profile.
     * @path /lawyer_profiles/{lawyerId}
     * @allow (get, list) Any user can read or list lawyer profiles.
     * @allow (create, update, delete) Lawyer with UID 'lawyer123' can create, update, and delete their own profile.
     * @deny (create, update, delete) User with UID 'user456' cannot modify lawyer 'lawyer123' profile.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /lawyer_profiles/{lawyerId} {
      allow get, list: if true;
      allow create: if isOwner(lawyerId) && request.resource.data.userId == lawyerId;
      allow update: if isExistingOwner(lawyerId) && request.resource.data.userId == resource.data.userId; // Enforce immutability of userId on update
      allow delete: if isExistingOwner(lawyerId);
    }
    
    /**
     * @description Allows participants of a chat to read and write to the chat document.
     * @path /chats/{chatId}
     * @allow (create, update) User who is a participant in the chat can create and update the chat document.
     * @allow (get) User who is a participant in the chat can read the chat document.
     * @deny (create, update, delete) User who is not a participant cannot modify the chat document.
     * @principle Enforces shared access based on the participants array.
     */
    match /chats/{chatId} {
      allow get: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow delete: if false; // Deletion is not allowed
    }
  }
}