/**
 * @file Firebase Security Rules for Pr√≠meLegal Connect
 * @core_philosophy This ruleset enforces a strict user-ownership model for user accounts and a public-read, owner-write model for lawyer profiles.
 * @data_structure User data is stored under `/users/{userId}`. Lawyer profiles, containing public information, are stored under `/lawyer_profiles/{lawyerId}`. Cases are stored as an array directly within User documents, which is non-ideal for querying and scaling.
 * @key_security_decisions
 *  - Users can only access their own data under `/users/{userId}`.
 *  - Lawyer profiles in `/lawyer_profiles/{lawyerId}` are publicly readable but only writable by the profile owner.
 *  - Listing of user documents in `/users` is disallowed.
 *  - The cases collection is not used because cases are embedded directly into the UserAccount document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secure user accounts. Only the user can read and write their own data.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user123' can create their account at /users/user123.
     * @allow (get, update, delete) - User with UID 'user123' can read, update, and delete their account at /users/user123.
     * @deny (create) - User with UID 'user456' cannot create an account at /users/user123.
     * @deny (get, update, delete) - User with UID 'user456' cannot read, update, or delete the account at /users/user123.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing user documents is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && resource.data.id == request.resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secure public lawyer profiles. Profiles are publicly readable, but only the owner can create, update, and delete.
     * @path /lawyer_profiles/{lawyerId}
     * @allow (get, list) - Any user, authenticated or not, can read a lawyer's profile.
     * @allow (create, update, delete) - Lawyer with UID 'lawyer123' can create, update, and delete their profile at /lawyer_profiles/lawyer123.
     * @deny (create, update, delete) - User with UID 'user456' cannot create, update, or delete the profile at /lawyer_profiles/lawyer123.
     * @principle Public read access with owner-only write access.
     */
    match /lawyer_profiles/{lawyerId} {
      allow get, list: if true;
      allow create: if isOwner(lawyerId) && request.resource.data.userId == lawyerId;
      allow update: if isExistingOwner(lawyerId) && resource.data.userId == request.resource.data.userId;
      allow delete: if isExistingOwner(lawyerId);
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}