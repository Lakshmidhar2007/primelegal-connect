rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    /**
     * @description Enforces a user-ownership model for user accounts.
     * @path /users/{userId}
     * @allow (create) - A user with UID 'user_abc' can create their own account at /users/user_abc.
     * @allow (get, list) - A user with UID 'user_abc' can read their own account at /users/user_abc.
     * @allow (update, delete) - A user with UID 'user_abc' can update or delete their own account at /users/user_abc.
     * @deny (create) - A user with UID 'user_abc' cannot create an account at /users/user_xyz.
     * @deny (get, list) - A user with UID 'user_abc' cannot read an account at /users/user_xyz.
     * @deny (update, delete) - A user with UID 'user_abc' cannot update or delete an account at /users/user_xyz.
     * @principle Restricts access to a user's own data tree. Validates relational integrity between documents.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get, list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

      /**
       * @description Allows public read access to lawyer profiles, but restricts writes to the profile owner.
       * @path /lawyer_profiles/{lawyerId}
       * @allow (get, list) - Any user (authenticated or not) can read lawyer profiles.
       * @allow (create) - A lawyer with UID 'lawyer_abc' can create their profile at /lawyer_profiles/lawyer_abc.
       * @allow (update, delete) - A lawyer with UID 'lawyer_abc' can update or delete their own profile at /lawyer_profiles/lawyer_abc.
       * @deny (create) - A user with UID 'user_abc' cannot create a lawyer profile at /lawyer_profiles/lawyer_xyz.
       * @deny (update, delete) - A user with UID 'user_abc' cannot update or delete a lawyer profile at /lawyer_profiles/lawyer_xyz.
       * @principle Allows public read access, but enforces document ownership for writes.
       */
    match /lawyer_profiles/{lawyerId} {
      function isSignedIn() {
        return request.auth != null;
      }
      function isOwner(lawyerId) {
        return request.auth.uid == lawyerId;
      }
        function isExistingOwner(lawyerId) {
        return isOwner(lawyerId) && resource != null;
      }

      allow get, list: if true;
      allow create: if isSignedIn() && isOwner(lawyerId);
      allow update: if isExistingOwner(lawyerId);
      allow delete: if isExistingOwner(lawyerId);
    }
  }
}