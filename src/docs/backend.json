{
  "entities": {
    "UserAccount": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserAccount",
      "type": "object",
      "description": "Represents a user account within the PRIMELEGAL CONNECT application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user account."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user account.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the user."
        },
        "isLawyer": {
          "type": "boolean",
          "description": "Indicates whether the user is a lawyer or not."
        },
        "registrationDate": {
          "type": "string",
          "description": "Date and time the user registered.",
          "format": "date-time"
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture.",
          "format": "uri"
        },
        "phone": {
            "type": "string",
            "description": "The user's phone number."
        },
        "address": {
            "type": "string",
            "description": "The user's address."
        },
        "gender": {
            "type": "string",
            "description": "The user's gender.",
            "enum": ["male", "female", "other", "prefer-not-to-say"]
        },
        "specialty": {
          "type": "string",
          "description": "The lawyer's primary area of legal practice."
        },
        "bio": {
          "type": "string",
          "description": "A professional biography for the lawyer."
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "The lawyer's professional website."
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "A link to the lawyer's LinkedIn profile."
        },
        "dateOfBirth": {
            "type": "string",
            "format": "date",
            "description": "The user's or lawyer's date of birth."
        },
        "nationality": {
            "type": "string",
            "description": "The lawyer's nationality."
        },
        "nationalityProofUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to the lawyer's proof of nationality document."
        },
        "barCouncilNumber": {
            "type": "string",
            "description": "The lawyer's Bar Council Registration Number."
        },
        "licenseUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to the lawyer's license document."
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "isLawyer",
        "registrationDate"
      ]
    },
    "PublicLawyerProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PublicLawyerProfile",
      "type": "object",
      "description": "Publicly visible information for a lawyer, derived from their UserAccount.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user this profile belongs to."
        },
        "firstName": {
          "type": "string",
          "description": "The first name of the lawyer."
        },
        "lastName": {
          "type": "string",
          "description": "The last name of the lawyer."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the lawyer's profile picture.",
          "format": "uri"
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "The lawyer's contact email address."
        },
        "phone": {
            "type": "string",
            "description": "The lawyer's contact phone number."
        },
        "specialty": {
          "type": "string",
          "description": "The lawyer's primary area of legal practice."
        },
        "bio": {
          "type": "string",
          "description": "A professional biography for the lawyer."
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "The lawyer's professional website."
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "A link to the lawyer's LinkedIn profile."
        },
        "dateOfBirth": {
          "type": "string",
          "format": "date",
          "description": "The lawyer's date of birth."
        },
        "nationality": {
            "type": "string",
            "description": "The lawyer's nationality."
        },
        "barCouncilNumber": {
            "type": "string",
            "description": "The lawyer's Bar Council Registration Number."
        }
      },
      "required": [
        "userId",
        "firstName",
        "lastName"
      ]
    },
    "Case": {
      "title": "Case",
      "type": "object",
      "description": "Represents a legal case submitted by a user to a specific lawyer.",
      "properties": {
        "id": { "type": "string" },
        "userId": { "type": "string" },
        "lawyerId": { "type": "string" },
        "chatId": { "type": "string" },
        "status": { "type": "string", "enum": ["Submitted", "In Review", "Responded", "Closed", "Approved"] },
        "submittedAt": { "type": "string", "format": "date-time" },
        "fullName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "contactMethod": { "type": "string" },
        "legalIssueType": { "type": "string" },
        "otherLegalIssue": { "type": "string" },
        "issueDate": { "type": "string", "format": "date-time" },
        "involvedParties": { "type": "string" },
        "description": { "type": "string" },
        "desiredOutcome": { "type": "string" },
        "previousStepsTaken": { "type": "string" },
        "previousStepsDescription": { "type": "string" },
        "documents": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "userId", "lawyerId", "status", "submittedAt", "fullName", "email", "description"]
    },
    "Chat": {
        "title": "Chat",
        "type": "object",
        "description": "Represents a chat session between a user and a lawyer.",
        "properties": {
            "id": { "type": "string" },
            "caseId": { "type": "string" },
            "userId": { "type": "string" },
            "lawyerId": { "type": "string" },
            "createdAt": { "type": "string", "format": "date-time" },
            "lastMessage": { "type": "string" }
        },
        "required": ["id", "caseId", "userId", "lawyerId", "createdAt"]
    },
    "ChatMessage": {
        "title": "ChatMessage",
        "type": "object",
        "description": "Represents a single message in a chat.",
        "properties": {
            "id": { "type": "string" },
            "senderId": { "type": "string" },
            "text": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "senderId", "text", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserAccount",
          "schema": {
            "$ref": "#/backend/entities/UserAccount"
          },
          "description": "Stores user account information. Only the user themselves can read all fields and write to their own document.",
          "params": [
            {
              "name": "userId",
              "description": "The unique identifier for the user. This is also the Firebase Authentication UID."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}/cases/{caseId}",
        "definition": {
            "entityName": "Case",
            "schema": { "$ref": "#/backend/entities/Case" },
            "description": "Stores case submissions from a user. Readable/writable by the user and the assigned lawyer."
        }
      },
      {
        "path": "/lawyer_profiles/{lawyerId}",
        "definition": {
          "entityName": "PublicLawyerProfile",
          "schema": {
            "$ref": "#/backend/entities/PublicLawyerProfile"
          },
          "description": "Stores public-facing profiles for lawyers. This collection is publicly readable by any user, authenticated or not. Only the lawyer themselves can create or update their own profile.",
          "params": [
            {
              "name": "lawyerId",
              "description": "The unique ID for the lawyer profile, which should be the same as the user's UID."
            }
          ]
        }
      },
      {
          "path": "/chats/{chatId}",
          "definition": {
              "entityName": "Chat",
              "schema": {
                  "$ref": "#/backend/entities/Chat"
              },
              "description": "Stores chat sessions. Readable by participants."
          }
      },
      {
          "path": "/chats/{chatId}/messages/{messageId}",
          "definition": {
              "entityName": "ChatMessage",
              "schema": {
                  "$ref": "#/backend/entities/ChatMessage"
              },
              "description": "Stores messages within a chat. Readable by participants."
          }
      }
    ],
    "reasoning": "Cases are stored in a subcollection under each user for security. A top-level 'chats' collection manages conversations, linking users and lawyers. This structure simplifies security rules and ensures data privacy."
  }
}
